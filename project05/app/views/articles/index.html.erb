<% content_for :subtitle do %>
...Taking over the world...One ridicululous title at a time
<% end %>

	
	<div class="notice">
		<%= notice %>
	</div>
	
	
	<div id="article-add-table-title">
		<div id="create-article">
			<%= link_to (image_tag('/images/add_article.png', :border => 0, :title => 'Add Article')) + "Create an Article", new_article_path, {:title => 'Create an Article'} %>
		</div>
		<div id="table-title">
			<h2>All the World's Articles</h2>
		</div>
	<div>

	<% if @articles.count > 0 %>
		
	<div class="article-list">
		<table>
			<tr id="titles">
				<td width="160px">Title</td>
				<td width="120px">Author</td>
				<td width="450px">Body</td>
				<td width="200px">Creation Date</td>
			</tr>
			<% @articles.each do |article| %>
			<tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
				<td><%=h truncate(article.title, :length => 20) %></td>
				<td><%=h article.author %></td>
				<td><%=h truncate(article.body, :length => 65) %></td>
				<td><%= article.created_at.strftime("%A, %b. %d %Y") %></td>
				<td class="icons"><%= link_to (image_tag ('/images/view_article.png', :border => 0, :title => 'View Article', :onmouseover => "this.src='/images/view_article_big.png'", :onmouseout => "this.src='/images/view_article.png'")), article %></td>
				<td class="icons"><%= link_to (image_tag('/images/edit_article.png', :border => 0, :title => 'Edit Article', :onmouseover => "this.src='/images/edit_article_big.png'", :onmouseout => "this.src='/images/edit_article.png'")), edit_article_path(article) %></td>
				<td class="icons"><%= link_to (image_tag('/images/delete_article.png', :border => 0, :title => 'Delete Article', :onmouseover => "this.src='/images/delete_article_big.png'", :onmouseout => "this.src='/images/delete_article.png'")), article, :confirm => 'Are you sure?', :method => :delete %></td>
			</tr>
			<% end %>
		</table>
	</div>
	
	<% end %>
	
	<div class="article-count">		
		<%= pluralize(@articles.count, 'article') %>
	</div>
	
</div>	
	
	
	
	
	

