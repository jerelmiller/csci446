- content_for :subtitle do
  \...Chuck Norris has nothing on me
.links-row
  .email-link
    = mail_to '', (image_tag('/images/email.png', :border => 0, :title => "Email this article", :class => 					  									'icon-reposition')) + "email", :subject => @article.title, :body => article_url(@article), :title => 'Email This article'
  .delete-link
    = link_to (image_tag('/images/delete_article.png', :border => 0, :title => "Delete This Article", :class => 'icon-reposition')) + "delete", @article, :confirm => 'Are you sure?', :method => :delete, :title => "Delete This article"
  .edit-link
    = link_to (image_tag('/images/edit_article.png', :border => 0, :title => "Edit This Article", :class => 'icon-reposition')) + "edit", edit_article_path(@article), {:title => "Edit This Article"}
  .articles-link
    = link_to (image_tag('/images/back.png', :border => 0, :title => "List All Articles", :class => 'icon-reposition')) + "list all articles", articles_path, {:title => "List All Articles"}
.article-title
  %h1= h @article.title
.author
  %p
    by #{h @article.author.name}. #{pluralize(@article.update_count, 'edit')} since #{@article.created_at.strftime("%b. %d, %Y.")}
  .article-body
    %p= h simple_format(@article.body)
