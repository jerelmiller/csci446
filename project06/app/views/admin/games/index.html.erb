<div>
  <%= render :partial => '/admin/global/header' %>

  <div class="paginate">
    <%= will_paginate @games %>
  </div>

  <% if @num_games > 0 %>
    <table class="games-list">
      <tr class="table-header">
        <th width="100px">Name</th>
        <th width="60px">Rating</th>
		<th width="200px">Date Added</th>
      </tr>
  <% end %>

  <% @games.each do |game| %>
    <tr class=<%= cycle('list-line-odd', 'list-line-even') %>>
      <td><%=h link_to game.name, edit_game_path(game) %></td>
      <td><%=h game.rating %></td>
	  <td><%=h game.created_at.strftime("%b. %d, %Y") %>
    </tr>
  <% end %>
  </table>

  <br />
  <div class="new-game">
    <%= link_to 'New game', new_game_path %>
  </div>
</div>