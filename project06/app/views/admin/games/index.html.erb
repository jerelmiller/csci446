<%= render :partial => '/admin/global/header' %>

<h1 class="title"><%= @num_games %> Total Games</h1>

<div class="paginate">
  <%= will_paginate @games %>
</div>


<% if @num_games > 0 %>
  <table class="list">
    <tr class="table-header">
      <th width="150px">Name</th>
      <th width="150px">Rating</th>
	  <th width="300px">Date Added</th>
    </tr>
<% end %>

<% @games.each do |game| %>
  <tr class=<%= cycle('list-line-odd', 'list-line-even') %>>
    <td><%=h link_to game.name, edit_admin_game_path(game) %></td>
    <td><%=h game.rating %></td>
    <td><%=h game.created_at.strftime("%b. %d, %Y")+" by " %>
	      <% if game.user == current_user %>
		    me
		  <% else %>
		    <%= @user.find(game.user_id).firstname+" "+@user.find(game.user_id).lastname %>
		  <% end %></td>
  </tr>
<% end %>
</table>

<br />
<div class="new">
  <%= link_to 'New game', new_admin_game_path %>
</div>