<%= render :partial => '/admin/global/header' %>

<h1 class="title">New game</h1>

<div class="form">


  <% form_for([:admin, @game]) do |f| %>
    <%= f.error_messages %>

    <div>
      <%= f.label :name %>
	  <%= f.text_field :name %>
	</div><br/>
	<div>
      <%= f.label :rating %>
	</div><br/>
	<p>
	  <%= f.radio_button :rating, "Excellent" %>
	  <%= f.label :excellent %>
	</p>
	<p>
	  <%= f.radio_button :rating, "Good" %>
	  <%= f.label :good %>
	</p>
	<p>
	  <%= f.radio_button :rating, "Average"  %>
	  <%= f.label :average %>
	</p>
	<p>
      <%= f.radio_button :rating, "Just Plain Sucks" %>
      <%= f.label :just_plain_sucks %>
	</p>
	<p>
	  <%= f.label :creator %>
	  <%= f.select :user_id, @users.collect { |u| [u.firstname+" "+u.lastname, u.id] } %>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>
</div>