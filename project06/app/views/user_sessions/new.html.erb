<%= render :partial => '/global/header'%>

<div class="form">
  <h1>Log In</h1>
  <h3>First Time Here? <%= link_to 'Register.', new_user_path, :title => 'Register' %></h3>

  <% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
    <p><%= f.submit 'Log In' %></p>
  <% end %>
</div>


